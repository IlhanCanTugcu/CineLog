@using Microsoft.AspNetCore.Identity
@using CineLog.Core.Entities
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineLog</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.2/cyborg/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CineLog.Web.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark glass-navbar mb-4 shadow-lg py-3">
            <div class="container">

                <a class="navbar-brand fw-bold fs-3 text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-film me-2"></i>CineLog
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">

                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link fs-5" asp-controller="Movies" asp-action="Index">
                                <i class="bi bi-search me-1"></i> Film Ara
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item ms-lg-3">
                                <a class="nav-link fs-5 text-warning" asp-controller="Movies" asp-action="MyList">
                                    <i class="bi bi-collection-play-fill me-1"></i> Arşivim
                                </a>
                            </li>
                            <li class="nav-item ms-lg-3">
                                <a class="nav-link fs-5 text-info" asp-controller="Movies" asp-action="Stats">
                                    <i class="bi bi-bar-chart-line-fill me-1"></i> Analiz
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center gap-2">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            // --- GİRİŞ YAPMIŞ KULLANICI ---
                            <li class="nav-item me-2">
                                <span class="nav-link text-white" style="cursor: default;">
                                    <i class="bi bi-person-circle text-primary"></i>
                                    <span class="ms-1 opacity-75">@User.Identity?.Name</span>
                                </span>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-outline-danger btn-sm px-3 rounded-pill">
                                        <i class="bi bi-box-arrow-right"></i> Çıkış
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            // --- MİSAFİR ---
                            <li class="nav-item">
                                <a class="btn btn-link text-decoration-none text-white opacity-75 hover-opacity-100" asp-controller="Account" asp-action="Login">
                                    Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm rounded-pill px-4 fw-bold shadow-sm" asp-controller="Account" asp-action="Register">
                                    Kayıt Ol
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />
    <footer class="glass-footer">
        <div class="container">
            <div class="row gy-4">

                <div class="col-lg-4 col-md-6">
                    <h5 class="text-white fw-bold mb-3 footer-brand">
                        <i class="bi bi-film text-primary me-2"></i>CineLog
                    </h5>
                    <p class="text-muted small">
                        Kendi kişisel film ve dizi arşivini oluştur, izlediklerini puanla ve sinema dünyasını keşfet.
                        Modern, hızlı ve kullanıcı dostu arayüz.
                    </p>
                    <div class="mt-3">
                        <span class="badge bg-dark border border-secondary text-secondary">v1.0.0 Beta</span>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6">
                    <h5 class="text-white fw-bold mb-3">Hızlı Erişim</h5>
                    <ul class="list-unstyled footer-links">
                        <li><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li><a asp-controller="Movies" asp-action="Index">Film Ara</a></li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li><a asp-controller="Movies" asp-action="MyList">Arşivim</a></li>
                        }
                        else
                        {
                            <li><a asp-controller="Account" asp-action="Register">Kayıt Ol</a></li>
                            <li><a asp-controller="Account" asp-action="Login">Giriş Yap</a></li>
                        }
                    </ul>
                </div>

                <div class="col-lg-4 col-md-12">
                    <h5 class="text-white fw-bold mb-3">Geliştirici</h5>
                    <p class="text-muted small mb-3">
                        Bu proje .NET Core MVC mimarisi kullanılarak geliştirilmiştir.
                    </p>
                    <div class="d-flex">
                        <a href="#" class="social-icon" title="GitHub"><i class="bi bi-github"></i></a>
                        <a href="#" class="social-icon" title="LinkedIn"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="social-icon" title="Email"><i class="bi bi-envelope-fill"></i></a>
                    </div>
                </div>

            </div>

            <div class="border-top border-secondary border-opacity-25 mt-4 pt-3 text-center">
                <p class="text-muted small mb-0">
                    &copy; @DateTime.Now.Year <strong>CineLog</strong>. Tüm hakları saklıdır.
                    <span class="mx-2">|</span>
                    <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted hover-text-white">Gizlilik & Güvenlik</a>
                </p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>