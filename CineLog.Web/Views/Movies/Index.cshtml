@using CineLog.Core.DTOs
@model OmdbSearchResponse

@{
    ViewData["Title"] = "Film Ara";
}

<div class="container mt-4 fade-in">

    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
            <h1 class="display-6 fw-bold text-white mb-4">
                <i class="bi bi-film text-warning me-2"></i> Keşfetmeye Başla
            </h1>

            <div class="glass-search-bar p-3 rounded-pill">
                <form asp-action="Index" method="post" class="d-flex align-items-center">
                    <i class="bi bi-search fs-4 text-muted ms-3"></i>
                    <input type="text" name="term" class="form-control form-control-lg bg-transparent border-0 text-white shadow-none ms-2"
                           placeholder="Film, dizi veya oyuncu adı girin..." autocomplete="off" />
                    <button type="submit" class="btn btn-warning btn-lg rounded-pill px-4 fw-bold shadow-sm">
                        ARA
                    </button>
                </form>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-3 rounded-3 shadow-sm">
                    <i class="bi bi-exclamation-circle-fill me-2"></i> @TempData["Error"]
                </div>
            }
        </div>
    </div>

    @if (Model?.Search != null)
    {
        <div class="d-flex align-items-center mb-3 text-muted">
            <i class="bi bi-list-check fs-4 me-2"></i>
            <span>Toplam <strong>@Model.Search.Count</strong> sonuç bulundu.</span>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var movie in Model.Search)
            {
                <div class="col">
                    <div class="card h-100 movie-card rounded-4">

                        <div class="movie-poster-container bg-dark position-relative">
                            @if (movie.PosterUrl != "N/A")
                            {
                                <img src="@movie.PosterUrl" class="movie-poster" alt="@movie.Title">
                            }
                            else
                            {
                                <div class="d-flex flex-column align-items-center justify-content-center h-100 text-secondary">
                                    <i class="bi bi-image-fill fs-1 mb-2"></i>
                                    <span>Görsel Yok</span>
                                </div>
                            }

                            <span class="position-absolute top-0 end-0 m-2 badge bg-black bg-opacity-75 rounded-pill text-uppercase"
                                  style="font-size: 0.7rem; letter-spacing: 1px;">
                                @movie.Type
                            </span>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-white fw-bold text-truncate mb-1" title="@movie.Title">
                                @movie.Title
                            </h5>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="badge bg-secondary bg-opacity-25 text-muted border border-secondary border-opacity-25">
                                    <i class="bi bi-calendar-event me-1"></i> @movie.Year
                                </span>
                            </div>

                            <a asp-action="Details" asp-route-id="@movie.ImdbId"
                               class="btn btn-outline-light w-100 mt-auto rounded-3 stretched-link border-opacity-25 hover-warning">
                                <i class="bi bi-play-circle me-2"></i> İncele
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (Model?.Response == "False")
    {
        <div class="text-center py-5 opacity-75">
            <i class="bi bi-emoji-frown display-1 text-secondary"></i>
            <h3 class="mt-3 text-white">Sonuç Bulunamadı</h3>
            <p class="text-muted">Lütfen farklı bir anahtar kelime deneyin.</p>
        </div>
    }
</div>