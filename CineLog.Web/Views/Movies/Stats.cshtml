@model CineLog.Web.ViewModels.StatsViewModel

@{
    ViewData["Title"] = "Analiz";
}

<div class="container mt-4 fade-in">

    <div class="glass-panel p-4 rounded-4 mb-5 d-flex align-items-center">
        <div class="bg-primary bg-opacity-10 text-primary p-3 rounded-circle me-3">
            <i class="bi bi-bar-chart-line-fill fs-3"></i>
        </div>
        <div>
            <h2 class="fw-bold text-white mb-0">Sinema Karnem</h2>
            <p class="text-white-50 mb-0 small">Zevklerinin analizi ve platform trendleri</p>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-3">
            <div class="glass-panel p-4 rounded-4 text-center h-100 feature-card">
                <i class="bi bi-film display-4 text-warning mb-3"></i>
                <h3 class="display-5 fw-bold text-white">@Model.TotalMovies</h3>
                <p class="text-muted">Arşivdeki Film</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="glass-panel p-4 rounded-4 text-center h-100 feature-card">
                <i class="bi bi-heart-fill display-4 text-danger mb-3"></i>
                <h3 class="fs-2 fw-bold text-white text-truncate" title="@Model.FavoriteGenre">
                    @Model.FavoriteGenre
                </h3>
                <p class="text-muted">Favori Türün</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="glass-panel p-4 rounded-4 text-center h-100 feature-card">
                <i class="bi bi-star-half display-4 text-success mb-3"></i>
                <h3 class="display-5 fw-bold text-white">@Model.AverageImdb</h3>
                <p class="text-muted">Ortalama Puan</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="glass-panel p-4 rounded-4 text-center h-100 feature-card">
                <i class="bi bi-megaphone-fill display-4 text-info mb-3"></i>
                <h3 class="fs-4 fw-bold text-white text-truncate" title="@Model.TopDirector">
                    @Model.TopDirector
                </h3>
                <p class="text-muted">Favori Yönetmen</p>
            </div>
        </div>
    </div>

    @if (Model.MostAddedMovies.Any())
    {
        <div class="mt-5 pt-4 border-top border-secondary border-opacity-25 fade-in">

            <div class="d-flex align-items-center mb-4">
                <div class="bg-danger bg-opacity-10 text-danger p-2 rounded-circle me-3">
                    <i class="bi bi-fire fs-4"></i>
                </div>
                <h3 class="fw-bold text-white mb-0">Platformun Gözdeleri</h3>
            </div>

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                @foreach (var movie in Model.MostAddedMovies)
                {
                    <div class="col">
                        <div class="card h-100 movie-card rounded-4">

                            <div class="movie-poster-container bg-dark position-relative">

                                <span class="position-absolute top-0 start-0 m-2 badge bg-dark bg-opacity-75 backdrop-blur rounded-pill border border-secondary border-opacity-25 z-2">
                                    <i class="bi bi-people-fill me-1 text-danger"></i> @movie.AddCount Kişi
                                </span>

                                @if (!string.IsNullOrEmpty(movie.PosterUrl) && movie.PosterUrl != "N/A")
                                {
                                    <img src="@movie.PosterUrl" class="movie-poster" alt="@movie.Title">
                                }
                                else
                                {
                                    <div class="d-flex flex-column align-items-center justify-content-center h-100 text-secondary">
                                        <i class="bi bi-image-fill fs-1 mb-2"></i>
                                        <span>Görsel Yok</span>
                                    </div>
                                }
                            </div>

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-white fw-bold text-truncate mb-2" title="@movie.Title">
                                    @movie.Title
                                </h5>

                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted small">
                                        <i class="bi bi-fire text-danger"></i> Popüler
                                    </span>

                                    <span class="badge bg-success bg-opacity-75 text-white">
                                        <i class="bi bi-star-fill me-1"></i> @movie.ImdbRating
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="text-center mt-5 text-muted">
            <small>Henüz yeterli global veri oluşmadı.</small>
        </div>
    }

    <div class="mt-5 text-center pb-5">
        @if (Model.TotalMovies < 5)
        {
            <div class="alert alert-info d-inline-block rounded-pill px-5 border-0 bg-opacity-10">
                <i class="bi bi-info-circle me-2"></i> İstatistiklerin daha anlamlı olması için biraz daha film eklemelisin! 🎥
            </div>
        }
    </div>

</div>