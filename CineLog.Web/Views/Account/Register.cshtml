@model CineLog.Web.Models.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="d-flex align-items-center justify-content-center fade-in"
     style="min-height: 85vh; background-image: url('/img/cinema.jpg'); background-size: cover; background-position: center; border-radius: 20px; position: relative; overflow: hidden;">

    <div class="position-absolute w-100 h-100 bg-dark opacity-50"></div>

    <div class="col-md-6 position-relative z-1 p-3">

        <div class="glass-panel p-5 rounded-4">

            <div class="text-center mb-4">
                <i class="bi bi-ticket-perforated-fill display-4 text-warning"></i>
                <h2 class="fw-bold text-white mt-3">Aramıza Katıl</h2>
                <p class="text-white-50">Sadece birkaç saniyede kendi koleksiyonunu oluştur.</p>
            </div>

            <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

            <form asp-action="Register" method="post">

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label text-white small">Ad</label>
                        <input asp-for="FirstName" class="form-control bg-dark border-secondary text-white" placeholder="Adınız" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-white small">Soyad</label>
                        <input asp-for="LastName" class="form-control bg-dark border-secondary text-white" placeholder="Soyadınız" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label text-white small">Kullanıcı Adı</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-at"></i></span>
                        <input asp-for="UserName" class="form-control bg-dark border-secondary text-white" placeholder="takma_ad" />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label text-white small">Email Adresi</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" class="form-control bg-dark border-secondary text-white" placeholder="ornek@email.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label text-white small">Şifre</label>
                        <input asp-for="Password" class="form-control bg-dark border-secondary text-white" placeholder="******" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-white small">Şifre Tekrar</label>
                        <input asp-for="ConfirmPassword" class="form-control bg-dark border-secondary text-white" placeholder="******" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-warning w-100 btn-lg rounded-pill fw-bold shadow-lg hover-scale">
                    Ücretsiz Kayıt Ol
                </button>
            </form>

            <div class="mt-4 pt-3 border-top border-secondary border-opacity-25 text-center">
                <span class="text-white-50">Zaten üye misin?</span>
                <a asp-action="Login" class="text-primary text-decoration-none fw-bold ms-2">Giriş Yap</a>
            </div>
        </div>
    </div>
</div>