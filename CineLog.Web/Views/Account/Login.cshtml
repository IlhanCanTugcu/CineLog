@model CineLog.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="d-flex align-items-center justify-content-center fade-in"
     style="min-height: 80vh; background-image: url('/img/cinema.jpg'); background-size: cover; background-position: center; border-radius: 20px; position: relative; overflow: hidden;">

    <div class="position-absolute w-100 h-100 bg-dark opacity-50"></div>

    <div class="col-md-4 position-relative z-1 p-3">

        <div class="glass-panel p-5 rounded-4 text-center">

            <div class="mb-4">
                <i class="bi bi-person-circle display-4 text-primary"></i>
                <h2 class="fw-bold text-white mt-3">Hoş Geldin</h2>
                <p class="text-white-50">Kişisel arşivine erişmek için giriş yap.</p>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <form asp-action="Login" method="post" class="text-start">

                <div class="mb-3">
                    <label class="form-label text-white ms-1">Kullanıcı Adı</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-person-fill"></i></span>
                        <input asp-for="UserName" class="form-control bg-dark border-secondary text-white" placeholder="Kullanıcı adınız..." />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label text-white ms-1">Şifre</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-secondary"><i class="bi bi-key-fill"></i></span>
                        <input asp-for="Password" class="form-control bg-dark border-secondary text-white" placeholder="******" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 btn-lg rounded-pill fw-bold shadow-lg hover-scale">
                    Giriş Yap
                </button>
            </form>

            <div class="mt-4 pt-3 border-top border-secondary border-opacity-25">
                <p class="text-white-50 mb-0">Hesabın yok mu?</p>
                <a asp-action="Register" class="text-warning text-decoration-none fw-bold">Hemen Kayıt Ol</a>
            </div>
        </div>
    </div>
</div>